{
    "name": "etna/composer-behat-utils",
    "description": "ETNA Behat utils",
    "keywords": ["Behat", "utils"],
    "license": "proprietary",
    "authors": [
        {
            "name": "ETNA",
            "email": "dev@etna-alternance.net",
            "homepage": "http://etna-alternance.net"
        }
    ],
    "require": {
        "behat/behat": "2.x@stable",
        "gquemener/behat-analysis-extension": "~1.0",
        "phpunit/php-code-coverage": "2.0.*@dev",
        "phpunit/phpcov": "2.0.*@dev"
    },
    "config": {
        "bin-dir": "bin"
    },
    "autoload": {
        "psr-0": {
            "ETNA\\FeatureContext": "src"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "repositories": [
       {
           "type": "composer",
           "url":  "http://blu-composer.herokuapp.com"
       }
   ]
}
